{
    "steps": [
    {
        "name": "gcr.io/cloud-builders/go",
        "env":[
            "GOOS=linux", 
            "GOARCH=amd64"
        ],
        "args": [ "build", "-o", "apictl", "-ldflags=\"-s -w\"", "./api"]
    }, {
        "name": "zip",
        "args": ["apictl.zip", "apictl"]
    }, {
        "name": "gcr.io/cloud-builders/gsutil",
        "args": ["cp", "apictl.zip", "datacol-dev/binaries/$VERSION/apictl.zip"],
        "env": ["VERSION=1.0.1-alpha.11"]
    }, {
        "name": "gcr.io/cloud-builders/gsutil",
        "args": ["acl", "ch", "-u", "allUsers:R", "datacol-dev/binaries/$VERSION/apictl.zip"],
        "env": ["VERSION=1.0.1-alpha.11"]
    }]
}
